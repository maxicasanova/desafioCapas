    {{#if productsArray}}
            <div class="container">
                <div class="row">
                    <div class="col">Nombre</div>
                    <div class="col">Precio</div>
                    <div class="col">Imagen</div>
                </div>
            </div>
        {{#each productsArray}}
        <div class="card container" >
            <div class="row align-items-center">
                <p class="card-text col">{{title}}</p>
                <p class="card-text col">{{price}}</p>
                <img src="{{thumbnail}}" class="card-img-right col" style="max-width: 80px;">
                <a href='/api/productos/{{_id}}' class="btn btn-primary">Ver producto</a>
            </div>
        </div>
        {{/each}}
    {{else}}
        <p>No hay productos</p>
    {{/if}}